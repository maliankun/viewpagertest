<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
                android:id="@+id/second"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_marginTop="5dp"                    
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >
		            <android.support.v4.view.ViewPager           
		                        android:id="@+id/vp_mms"
		                        android:layout_width="match_parent"
		                        android:layout_height="fill_parent" >
		            </android.support.v4.view.ViewPager>
		       </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"                   
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal" >

                   <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"                        
                        android:gravity="center_horizontal" >

                        <ImageView
                            android:id="@+id/page00"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/dot_press" />

                        <ImageView
                            android:id="@+id/page01"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/dot" />

                        <ImageView
                            android:id="@+id/page02"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/dot" />
                        <ImageView
                            android:id="@+id/page03"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/dot" />
                        <ImageView
                            android:id="@+id/page04"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/dot" />
                        <ImageView
                            android:id="@+id/page05"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/dot" />
                        <ImageView
                            android:id="@+id/page06"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/dot" />
                        <ImageView
                            android:id="@+id/page07"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/dot" />
                        <ImageView
                            android:id="@+id/page08"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/dot" />
                        <ImageView
                            android:id="@+id/page09"
                            android:layout_width="10dp"
                            android:visibility="gone"
                            android:layout_height="10dp"
                            android:layout_marginLeft="19dp"
                            android:src="@drawable/dot" />
                       
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

</LinearLayout>
